<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Lista principal de vizualização-->
    <record id="estate_property_tree_view" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Real State">
                <field name="name"/>
                <field name="postcode"/> 
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="bedrooms"/>
                <field name="garden_orientation"/>
                
            </tree>
        </field>
    </record>

    <!-- Utilizado para pesquisa -->
    <record id="estate_property_search_view" model="ir.ui.view">
        <field name="name">estate.property.search.view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Real State">
                <field name="name"/>
                <field name="postcode" /> 
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="bedrooms" /> 
                <field name="garden_orientation"/>
                <filter string="Teste" name="garden_orientation" domain="[('garden_orientation', '=', 'norte')]"/>
                
            </search> 
        </field>
    </record>

    <!-- Cadastro e vizualizaçao de item -->
    <record id="aula_form" model="ir.ui.view">
        <field name="name">aulaestate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Real State">
                <sheet>
                    <group>
                        <h1><field name="name"/></h1>
                        <field name="tag_ids" widget="many2many_tags"/>

                        <group>
                            
                            <field name="property_type_id"/>
                            <field name="postcode" />
                            <field name="date_availability"/> 
                        </group>
                        
                        <group>
                            
                            <field name="expected_price"/>
                            <!--ERRO
                                <div t-if="record.state.raw_value == 'offer_received'">
                                    Melhor Oferta: <field name="best_price"/>
                                </div>
                            -->
                            <field name="selling_price"/>
                            

                        </group>
                        <separator/>
                        
                        <div class="oe_title">
                            <notebook>
                                <page string="Description">       
                                    <group>
                                        <field name="description"/>
                                        <field name="garden_orientation"/>
                                        <field name="bedrooms"/>
                                        <field name="living_area"/>
                                        <field name="facades"/>
                                        <field name="garage"/>
                                        <field name="garden"/>
                                        <field name="garden_area"/>
                                    </group>
                                </page>

                                <page string="Offers">       
                                    <group>
                                        <field name="offer_ids" />
                                    </group>
                                </page>

                                <page string="Other info">       
                                    <group>
                                    <!--
                                        <field name="user_id"/>
                                        <fiels name="buyer_id">
                                        -->
                                    </group>
                                </page>
                            </notebook>
                        </div>

                    </group>
                </sheet>
            </form>
        </field>
    </record>



</odoo>