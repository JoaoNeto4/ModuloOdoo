<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="test_model_action" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Real State">
                <field name="name"/>
                <field name="description"/>
                <field name="postcode"/> 
                <field name="date_availability"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <field name="garage"/>
                <field name="garden"/>
                <field name="garden_area"/>
                <field name="garden_orientation"/>
            </tree>
        </field>
    </record>


    <record id="aula_form" model="ir.ui.view">
        <field name="name">aula.odoo.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Real State">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/> 
                            <field name="description"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                            <field name="active"/>
                        </group>

                        <group>
                            <field name="garden_orientation"/>
                            <field name="bedrooms"/>
                            <field name="living_area"/>
                            <field name="facades"/>
                            <field name="garage"/>
                            <field name="garden"/>
                            <field name="garden_area"/>
                        </group>

                    </group>
                </sheet>
            </form>
        </field>
    </record>



</odoo>