    <record id="aula_form" model="ir.ui.view">
        <field name="name">aulaestate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Real State">
                <sheet>
                    <group>
                        <group>
                            <field name="postcode" />
                            <field name="date_availability"/>  
                        </group>
                        
                        <group>
                            <field name="expected_price"/>
                            <field name="selling_price"/>

                        </group>
                        <separator/>
                        
                        <div class="oe_title">
                            <notebook>
                                <page string="Descrição">       
                                    <group>
                                        <field name="description"/>
                                        <field name="garden_orientation"/>
                                        <field name="bedrooms"/>
                                        <field name="living_area"/>
                                        <field name="facades"/>
                                        <field name="garage"/>
                                        <field name="garden"/>
                                        <field name="garden_area"/>
                                    </group>
                                </page>
                            </notebook>
                        </div>

                    </group>
                </sheet>
            </form>
        </field>
    </record>



</odoo>